<div class="text-center col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-xs-12">
	<%= image_tag @pin.image.url, class: 'img-responsive img-thumbnail' %>
</div>

<div class="text-center col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-xs-12">
	<h2 class="text-center">
	  <%= @pin.description %>
	</h2>
</div>

<div class="text-center form-group col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-xs-12">
	<br>
	<!-- Users can only Edit their own pins -->
	<% if @pin.user == current_user %>
		<%= link_to 'Edit', edit_pin_path(@pin), class: "btn btn-primary" %>
	<% end %>	
		<%= link_to 'Back', pins_path, class: "btn btn-default" %>

</div>