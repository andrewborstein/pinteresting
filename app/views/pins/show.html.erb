<div class="text-center form-group col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-xs-12">
	<div class="pin">
		<div class="panel">
		
			<div class="panel-header">	
				<!-- show image -->
				<div class="img">
					<%= image_tag @pin.image.url, class: 'img-responsive center-block' %>
					<!-- Current users can only Edit or Delete their own pins -->
		            <% if @pin.user == current_user %>
		              <div class="actions">
		                  <div class="btn-group btn-group-sm">
		                      <!-- link to edit pin -->
		                      <%= link_to edit_pin_path(@pin), title: 'Edit Pin', class: 'btn btn-default' do %>
		                        <i class="fa fa-pencil"></i>
		                      <% end %> 
		                      <!-- link to delete pin, with necessary method, and confirmation dialog -->
		                      <%= link_to @pin, title: 'Delete Pin', method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' do %>
		                        <i class="fa fa-trash"></i> 
		                      <% end %>
		                  </div>
		              </div>
		            <% end %><!-- /current user -->
				</div>
			</div>

			<div class="panel-body">
		          <div class="desc">
		            <!-- Pin description -->
		            <h2><%= @pin.description %></h2>
		          </div>
		          <div class="user">
           
		          <!-- if pin belongs to you... -->
		          <% if @pin.user.name %>
		            Posted by <%= mail_to @pin.user.email, @pin.user.name %>
		          
		          <!-- otherwise... -->
		          <% else %>
		            Posted by 
		              <%= mail_to @pin.user.email do %>  
		                  @user<%= @pin.user.id if @pin.user %>
		              <% end %>
		          <% end %>

		        </div>
	        </div>

		</div>
	</div>
</div>

<!-- nav controls -->
<div class="text-center form-group col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-xs-12">
	<br>
	<%= link_to 'Back', pins_path, class: "btn btn-default" %>

</div>