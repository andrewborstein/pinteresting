<%= form_for @pin, url: pins_path, html: { multipart: true } do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- add photo -->
  <div class="form-group col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-xs-12">
      <%= f.label :image %>
      <%= f.file_field :image, class:"form-control" %>
  </div>

  <!-- add description -->
  <div class="form-group col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-xs-12">
    <%= f.label :description %>
    <%= f.text_field :description, class:"form-control" %>
  </div>
  
  <!-- submit -->]
  <div class="actions text-center col-xs-12">
    <%= f.submit "Submit", class:"btn btn-primary btn-md", type: "submit" %> 
    <%= link_to 'Cancel', pins_path, class:"btn btn-default" %>
  </div>
<% end %>
